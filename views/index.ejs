
<% layout('boilerplate') -%>


<h3 class="d-flex justify-content-between mt-3 mb-3"><%- __("Tournaments") %> <a href="/tournament/create" class="btn btn-lg btn-success"><%- __("CreateTournament") %></a> </h3>






<% for (var i = 0; i < tournaments.length; i++) { %>


<a href="/tournament/<%= tournaments[i].id %>" class="list-group-item list-group-item-action flex-column align-items-start ">
    <div class="row">

        <div class="col-lg-9">
            <h4><%= tournaments[i].title %></h4>
            <div>
                <%  if (tournaments[i].is_online) { %>
                    <span class="badge badge-light">Online</span>
                <% } %>

                <%  if (tournaments[i].is_active == 0) { %>
                    <span class="badge badge-info">Ожидается</span>
                <% } %>

                <%  if (tournaments[i].is_active == 1 && tournaments[i].is_closed == 0) { %>
                    <span class="badge badge-success">Активен</span>
                <% } %>

                <%  if (tournaments[i].is_active == 1 && tournaments[i].is_closed == 1) { %>
                    <span class="badge badge-secondary">Закончен</span>
                <% } %>
            </div>
        </div>

        <div class="col-lg-3">

            <div class="progress" style="height: 8px;">
              <div class="progress-bar" role="progressbar" style="width: <%= (tournaments[i].current_tour/tournaments[i].tours_count)*100 %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>

             <small>тур <%= (tournaments[i].current_tour <= tournaments[i].tours_count) ? tournaments[i].current_tour : tournaments[i].tours_count %>/<%= tournaments[i].tours_count %></small><br>
            <div class="d-flex justify-content-between">
                <div class="mt-2"><%= tournaments[i].city %></div>
                <div><img src="/images/blank.png" class="float-right flag flag-<%= tournaments[i].country.toLocaleLowerCase() %>" title="<%= countries[tournaments[i].country] %>" alt="<%= countries[tournaments[i].country] %>"></div>
            </div>
        </div>

    </div>


</a>



<% } %>


<link rel="stylesheet" href="/stylesheets/flags.css">