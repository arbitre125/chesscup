
<% layout('boilerplate') -%>


<style>
    .trash-team {
        color: white;

    }

    .first-row {
        border-top : 0
    }

    .borderless td, .borderless th {
        border: none;
    }
    .team-title {
        cursor: pointer;
        font-size: 20px;
    }
    .team-label {
        width: 100%;
    }
    .caret {
        font-size: 25px;
        cursor: pointer;
    }
    .caret:hover {
        color: white;
        background: black;
    }
    .select-team-btn {
        font-size: 14px;
        border-bottom: 1px dashed black;
    }
    .school-participants {
        overflow : auto;
    }
    .tournament-participants {
        overflow : auto;
    }
</style>

<div class="row mt-3">
    <div class="col-lg-12 d-none d-lg-block">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/tournament">Турниры</a></li>
                <li class="breadcrumb-item active" aria-current="page"><a href="/tournament/<%= tournament.id %>"><%= tournament.title %></a></li>
                <li class="breadcrumb-item active" aria-current="page">Участники</li>
            </ol>
        </nav>
    </div>
</div>

<script>
    var all_students = JSON.parse('<%- all_students %>');
    var tournament_id = '<%= tournament.id %>';
    var tournament = JSON.parse('<%- tournamentJSON %>');
    var participants = JSON.parse('<%- participants %>');
    var teams = JSON.parse('<%- teams %>');
    var teachers = JSON.parse('<%- teachers %>');
</script>

<div id="participants"></div>

<script src="/js/participants.min.js"></script>

